set shortmess=a
set cmdheight=2
set backupdir=~/.vim/bkp//
set directory=~/.vim/swp//
set number relativenumber
set hidden
let g:ackprg = 'ag --vimgrep --smart-case'
cnoreabbrev ag Ack
cnoreabbrev aG Ack
cnoreabbrev Ag Ack
cnoreabbrev AG Ack
set listchars=eol:¬,tab:>·,trail:~,extends:>,precedes:<,space:␣
cnoreabbrev Ack Ack!
nnoremap <Leader>a :Ack!<Space>
"nnoremap <leader>c :Ag! "<cword>"<cr>
nnoremap <leader>w :Ack! <C-r>=expand('<cword>')<CR>
set autoread
" set list

